<!-- News jumbotron -->
<div class="jumbotron px-3 py-4">
  <img src="https://cahsi.utep.edu/wp-content/uploads/kisspng-computer-icons-user-clip-art-user-5abf13db5624e4.1771742215224718993529.png" height="150" class="mx-auto">

  <%= form_with(model: User.new, url: sign_in_path, class: 'mx-lg-5', local: true) do |f|%>
    <div class="md-form">
      <%= f.text_field :email, class: 'form-control', required: true %>
      <%= f.label :email %>
    </div>

    <div class="md-form">
      <%= f.password_field :password, class: 'form-control', required: true %>
      <%= f.label :password %>
    </div>
    <div class="text-center">
      <%= f.submit "Login", class: 'btn btn-primary'%>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    Join Online Shopping today? <%= link_to 'Create your account', sign_up_path %>
  </div>
  <%= render "shared/flash_messages" %>
</div>
